<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_blue">

    <TextView
        android:id="@+id/join_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_blue"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="외박신청"
        android:fontFamily="@font/neodgm"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="38dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="38dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/myinfo_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neodgm"
            android:text="신청자"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/Info_View"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/frame_calendar"
            android:fontFamily="@font/neodgm"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:text="홍길동 (남성) 990101 \ngildong@naver.com \n첨성관 101동 101호"
            android:textAlignment="viewStart"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/join_textView"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/duration_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/neodgm"
            android:text="행선지"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/states"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:hint="  ex. 대구시"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/destination_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/neodgm"
            android:text="외박기간"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="DuplicateIds" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            tools:context=".CalendarActivity">

            <TextView
                android:id="@+id/date_show1"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:hint="  yyyy - mm - dd"
                android:layout_gravity="center"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/cal_btn1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                app:srcCompat="@android:drawable/arrow_down_float" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/to_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:fontFamily="@font/neodgm"
                android:text="  ~  "
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/date_show2"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:hint="  yyyy - mm - dd"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/cal_btn2"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                app:srcCompat="@android:drawable/arrow_down_float" />


        </LinearLayout>

        <TextView
            android:id="@+id/reason_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/neodgm"
            android:text="사유"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="DuplicateIds" />

        <EditText
            android:id="@+id/reason_pwd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/frame_calendar"
            android:fontFamily="@font/sleigothic"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/agreement_textview"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/frame_calendar"
            android:text="  서약 내용
            \n  1. 본인은 위 외박기간을 반드시 준수하겠습니다.
            \n  2. 본인은 외박기간동안 코로나19 방역수칙을 철저히
            \n  준수하겠습니다.
            \n  3. 본 신청서는 허위로 작성된 것이 아니며, 허위 작성에 따른
            \n  모든 책임은 본인에게 있음을 동의합니다."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp"
            tools:ignore="DuplicateIds" />

        <CheckBox
            android:id="@+id/agm_cb"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:text="동의" />


        <Button
            android:id="@+id/enter_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/frame_login_btn"
            android:fontFamily="@font/neodgm"
            android:minWidth="70dp"
            android:minHeight="30dp"
            android:text="신청"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>