<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_blue">

    <TextView
        android:id="@+id/join_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_blue"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="외박신청"
        android:fontFamily="@font/neodgm"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/frame_calendar"
        android:fontFamily="@font/neodgm"
        android:paddingLeft="7dp"
        android:paddingTop="10dp"
        android:text="홍길동 (남성) 990101 \ngildong@naver.com \n첨성관 101동 101호"
        android:textAlignment="viewStart"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_textView"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="38dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="38dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36">

        <TextView
            android:id="@+id/duration_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neodgm"
            android:layout_marginTop="15dp"
            android:text="행선지"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/states"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/cities"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/destination_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neodgm"
            android:layout_marginTop="15dp"
            android:text="외박기간"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="DuplicateIds" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="50dp">

            <Spinner
                android:id="@+id/year"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/frame_calendar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:hint="YYYY"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/month"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/date"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/to_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neodgm"
                android:text="  ~  "
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:ignore="DuplicateIds" />

            <Spinner
                android:id="@+id/year"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp"
                tools:ignore="DuplicateIds" />

            <Spinner
                android:id="@+id/month"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp"
                tools:ignore="DuplicateIds" />

            <Spinner
                android:id="@+id/date"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/frame_calendar"
                android:fontFamily="@font/sleigothic"
                android:textSize="20dp"
                tools:ignore="DuplicateIds" />

        </LinearLayout>

        <TextView
            android:id="@+id/reason_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/neodgm"
            android:text="사유"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="DuplicateIds" />

        <EditText
            android:id="@+id/join_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/frame_calendar"
            android:fontFamily="@font/sleigothic"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/agreement_textview"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/frame_calendar"
            android:layout_marginTop="10dp"
            android:text="  서약 내용
            \n  1. 본인은 위 외박기간을 반드시 준수하겠습니다.
            \n  2. 본인은 외박기간동안 코로나19 방역수칙을 철저히
            \n  준수하겠습니다.
            \n  3. 본 신청서는 허위로 작성된 것이 아니며, 허위 작성에 따른
            \n  모든 책임은 본인에게 있음을 동의합니다."
            android:textSize="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="DuplicateIds" />

        <CheckBox
            android:id="@+id/agm_cb"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="동의" />


        <Button
            android:id="@+id/login_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_login_btn"
            android:fontFamily="@font/neodgm"
            android:minWidth="70dp"
            android:minHeight="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="120dp"
            android:text="신청"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>