<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_blue">

    <TextView
        android:id="@+id/set_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_blue"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="알림설정"
        android:fontFamily="@font/neodgm"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="38dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="38dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_textView"
        app:layout_constraintVertical_bias="1.0">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:switchMinWidth="50dp"
            android:switchPadding="20dp"
            android:text=" 푸시알림"
            android:textColor="@color/theme_blue3"
            android:fontFamily="@font/neodgm"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/theme_blue2"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:switchMinWidth="50dp"
            android:switchPadding="20dp"
            android:text=" 출입인증"
            android:textColor="@color/theme_blue2"
            android:fontFamily="@font/neodgm"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:switchMinWidth="50dp"
            android:switchPadding="20dp"
            android:text=" 도착일알림"
            android:textColor="@color/theme_blue2"
            android:fontFamily="@font/neodgm"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/enter_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:background="@drawable/frame_login_btn"
            android:fontFamily="@font/neodgm"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>