<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_blue">

    <TextView
        android:id="@+id/checkin_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/theme_blue"
        android:layout_marginTop="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="출입인증"
        android:fontFamily="@font/netmarbleb"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/checkInInfo"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/frame_calendar"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:fontFamily="@font/netmarblem"
            android:textColor="@color/theme_blue3"
            android:textSize="18dp"
            android:layout_margin="7dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/checkIn_name"
            android:fontFamily="@font/netmarblel"
            android:layout_margin="7dp"
            android:textSize="18dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관실정보"
            android:fontFamily="@font/netmarblem"
            android:textColor="@color/theme_blue3"
            android:textSize="18dp"
            android:layout_margin="7dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/checkIn_dorm"
            android:fontFamily="@font/netmarblel"
            android:layout_margin="7dp"
            android:textSize="18dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학번"
            android:fontFamily="@font/netmarblem"
            android:textColor="@color/theme_blue3"
            android:textSize="18dp"
            android:layout_margin="7dp"
            />

        <TextView
            android:id="@+id/checkIn_sutdentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/netmarblel"
            android:layout_margin="7dp"
            android:textSize="18dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="체크인 시각"
            android:fontFamily="@font/netmarblem"
            android:textColor="@color/theme_blue3"
            android:textSize="18dp"
            android:layout_margin="7dp"
            />

        <TextView
            android:id="@+id/checkIn_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/netmarblel"
            android:layout_margin="7dp"
            android:textSize="18dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    </LinearLayout>


    <Button
        android:id="@+id/scanner_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/frame_login_btn"
        android:fontFamily="@font/netmarbleb"
        android:text="QR 스캔"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/checkInInfo"
        app:layout_constraintVertical_bias="0.861"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>